include ../helpers/_variables
include ../helpers/_mixing
block variables
	- page.type = 'page';
doctype html
html(lang="ru")
	include ../components/_head
	block head
	body( class=page.type )
		include ../components/_mobilenav
		block wrapper
			.wrapper#wrapper
				header.wrapper__item.wrapper__item--header.header
					block header
						include ../parts/_header
				main.wrapper__item.wrapper__item--main.main#main
					block main
				footer.wrapper__item.wrapper__item--footer.footer
					block footer
						include ../parts/_footer
				block enqueue
					include ../components/_enqueue