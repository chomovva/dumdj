	Набор миксинов



mixin person( args )
	.person: .row.center-xs
		.col-xs-5.col-sm-3.col-md-3.col-lg-2: a.thumbnail( href=args.foto ): img.lazy( src="#", data-src=args.thumbnail, alt=args.name )
		.col-xs-8.col-sm-9.col-md-9.col-lg-10
			h3.title #{args.name}
			p.excerpt Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugiat doloribus cupiditate magni, sit, pariatur animi eos temporibus, perferendis repudiandae necessitatibus qui ullam, reprehenderit numquam ipsum? Qui id cumque, reiciendis obcaecati.
			ul.social
				li: a.facebook( href="#" ) #[span.sr-only facebook]
				li: a.instagram( href="#" ) #[span.sr-only instagram]
				li: a.twitter( href="#" ) #[span.sr-only twitter]
				li: a.vk( href="#" ) #[span.sr-only vk]
				li: a.youtube( href="#" ) #[span.sr-only youtube]